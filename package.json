{
	"name": "trello-activity-reporter",
	"version": "1.0.0",
	"description": "An activity report generator for Trello boards",
	"main": "index.js",
	"scripts": {
		"test": "eslint src && preact test",
		"start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
		"build": "preact build",
		"serve": "preact build && preact serve",
		"dev": "preact watch",
		"deploy": "preact build --no-prerender && echo 'activity-reporter.elvery.net' > build/CNAME && surge build/"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"eslintConfig": {
		"extends": "eslint-config-synacor"
	},
	"devDependencies": {
		"eslint": "^4.3.0",
		"eslint-config-synacor": "^1.0.1",
		"if-env": "^1.0.0",
		"preact-cli": "^1.4.1"
	},
	"dependencies": {
		"moment": "^2.18.1",
		"node-sass": "^4.5.3",
		"preact": "^8.2.1",
		"preact-compat": "^3.16.0",
		"preact-router": "^2.5.5",
		"react-helmet": "^5.2.0",
		"react-markdown": "^2.5.0",
		"react-toolbox": "^2.0.0-beta.12",
		"sass-loader": "^6.0.6"
	}
}
